<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.h2.Driver" />
				<property name="url" value="jdbc:h2:tcp://localhost/~/Documents/projects/eclipse-workspace/mybatis-learn/mybatis-demo" />
				<property name="username" value="john" />
				<property name="password" value="john" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
	<!-- 
	An interface that maps a function to an sql command
	 -->
	<mapper class = "com.example.dao.CustomerDao"/>
	</mappers>
</configuration>